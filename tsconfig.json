{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext", // Changed from "commonjs" to "ESNext"
        "moduleResolution": "node", // Add this to help resolve imports
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
